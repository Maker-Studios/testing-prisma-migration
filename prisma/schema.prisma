generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_DEV_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_DEV_URL_NON_POOLING") // uses a direct connection
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL") // used for migrations
}

model Todo {
  id        String   @id @default(uuid())
  title     String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  // testing Boolean  @default(false)
}
